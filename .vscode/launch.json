{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "gdb",
      "request": "launch",
      "name": "Debug ESP32",
      "target": "./build/sound_project.elf",
      "cwd": "${workspaceFolder}/sound_project",
      "gdbpath": "${workspaceFolder}/esp/xtensa-esp32-elf/bin/xtensa-esp32-elf-gdb",
      "autorun": [
        "target remote :3333",
        "mon reset halt",
        "flushregs",
        "thb app_main",
        "c"
      ],
      "preLaunchTask": "openocd"
    }
  ]
}